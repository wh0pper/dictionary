<h3>Add a word:</h3>
<form action='/' method='post'>
  <div class='form-group'>
    <input name='word' class='form-control' type='text'/>
    <button type='submit' class='btn btn-primary'>Add</button>
  </div>
</form>
<h3>Word list:</h3>
<% @word_list.each do |key, value| %>
  <p><a href="/<%= key%>"><%= key %></a></p>
<% end %>
